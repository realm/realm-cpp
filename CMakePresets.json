{
    "version": 3,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 21,
      "patch": 0
    },
  "configurePresets": [
    {
      "name": "default",
      "binaryDir": "${sourceDir}/.build/cmake-preset-${presetName}",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo;MinSizeRel"
      }
    },
    {
      "name": "linux",
      "displayName": "Linux",
      "inherits": "default",
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Linux"
      }
    },
    {
      "name": "macos",
      "displayName": "macOS",
      "inherits": "default",
      "generator": "Xcode",
      "toolchainFile": "${sourceDir}/realm-core/tools/cmake/xcode.toolchain.cmake",
      "cacheVariables": {
        "CMAKE_MAKE_PROGRAM": "${sourceDir}/cmake/cmake-build-xcode.sh",
        "CMAKE_SYSTEM_NAME": "Darwin",
        "CMAKE_XCODE_ATTRIBUTE_ONLY_ACTIVE_ARCH": "YES"
      },
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Darwin"
      }
    },
    {
      "name": "ios",
      "displayName": "iOS",
      "inherits": "default",
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Darwin"
      },
      "generator": "Xcode",
      "toolchainFile": "${sourceDir}/realm-core/tools/cmake/xcode.toolchain.cmake",
      "cacheVariables": {
        "CMAKE_MAKE_PROGRAM": "${sourceDir}/cmake/cmake-build-xcode.sh",
        "CMAKE_XCODE_ATTRIBUTE_ONLY_ACTIVE_ARCH": "YES",
        "CMAKE_XCODE_ATTRIBUTE_CODE_SIGNING_ALLOWED": "NO"
      }
    },
    {
      "name": "android",
      "inherits": "default",
      "hidden": true,
      "condition": {
        "lhs": "$env{ANDROID_NDK}",
        "type": "notEquals",
        "rhs": ""
      },
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Android",
        "CMAKE_ANDROID_NDK": "$env{ANDROID_NDK}",
        "VCPKG_TARGET_TRIPLET": "$env{vcpkg_arch}-android"
      },
      "environment": {
        "ANDROID_NDK_HOME": "$env{ANDROID_NDK}"
      }
    },
    {
      "name": "android-x86",
      "displayName": "Android x86",
      "inherits": "android",
      "cacheVariables": {
        "CMAKE_ANDROID_ARCH_ABI": "x86"
      },
      "environment": {
        "vcpkg_arch": "x86"
      }
    },
    {
      "name": "android-x86_64",
      "displayName": "Android x86_64",
      "inherits": "android",
      "cacheVariables": {
        "CMAKE_ANDROID_ARCH_ABI": "x86_64"
      },
      "environment": {
        "vcpkg_arch": "x64"
      }
    },
    {
      "name": "android-armeabi-v7a",
      "displayName": "Android armeabi-v7a",
      "inherits": "android",
      "cacheVariables": {
        "CMAKE_ANDROID_ARCH_ABI": "armeabi-v7a"
      },
      "environment": {
        "vcpkg_arch": "arm"
      }
    },
    {
      "name": "android-arm64-v8a",
      "displayName": "Android arm64-v8a",
      "inherits": "android",
      "cacheVariables": {
        "CMAKE_ANDROID_ARCH_ABI": "arm64-v8a"
      },
      "environment": {
        "vcpkg_arch": "arm64"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "configuration": "Debug"
    },
    {
      "name": "linux",
      "configurePreset": "linux",
      "displayName": "Linux",
      "configuration": "Debug"
    },
    {
      "name": "android-x86",
      "configurePreset": "android-x86",
      "displayName": "x86",
      "configuration": "Debug"
    },
    {
      "name": "android-x86_64",
      "configurePreset": "android-x86_64",
      "displayName": "x86_64",
      "configuration": "Debug"
    },
    {
      "name": "android-armeabi-v7a",
      "configurePreset": "android-armeabi-v7a",
      "displayName": "armeabi-v7a",
      "configuration": "Debug"
    },
    {
      "name": "android-arm64-v8a",
      "configurePreset": "android-arm64-v8a",
      "displayName": "arm64-v8a",
      "configuration": "Debug"
    },
    {
      "name": "macos",
      "displayName": "macOS",
      "configurePreset": "macos",
      "nativeToolOptions": [ "-destination", "platform=macOS" ],
      "configuration": "Debug"
    },
    {
      "name": "ios",
      "hidden": true,
      "inherits": "default",
      "configurePreset": "ios",
      "nativeToolOptions": [ "-destination", "$env{xcode_destination}" ]
    },
    {
      "name": "ios-device",
      "displayName": "Device",
      "inherits": "ios",
      "environment": {
        "xcode_destination": "generic/platform=iOS"
      },
      "configuration": "Debug"
    },
    {
      "name": "ios-simulator",
      "displayName": "Simulator",
      "inherits": "ios",
      "environment": {
        "xcode_destination": "generic/platform=iOS Simulator"
      },
      "configuration": "Debug"
    },
    {
      "name": "ios-catalyst",
      "displayName": "Catalyst",
      "inherits": "ios",
      "environment": {
        "xcode_destination": "generic/platform=macOS,variant=Mac Catalyst"
      },
      "configuration": "Debug"
    }
  ]
}
